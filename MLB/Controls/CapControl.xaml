<UserControl x:Class="MLB.Controls.CapControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="150" Width="150" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
	<Grid>
		<Border Width="Auto" Height="Auto">
			<Grid Width="Auto" Height="Auto">
				<Ellipse Stroke="#FF000000">
					<Ellipse.Fill>
						<LinearGradientBrush EndPoint="0.859,0.937" StartPoint="0.14,0.127">
							<GradientStop Color="#FF434343" Offset="0"/>
							<GradientStop Color="#FF222222" Offset="0.987"/>
						</LinearGradientBrush>
					</Ellipse.Fill>
				</Ellipse>
				<Ellipse Fill="#FFD31044" Margin="10,10,10,10" Stroke="#FF000000"/>
				<Image Source="../Resources/Images/Caps/WAS.png" Margin="30,30,30,30" />
				<Ellipse Margin="10,10,10,10">
					<Ellipse.Fill>
						<LinearGradientBrush EndPoint="0.859,0.937" StartPoint="0.14,0.127">
							<GradientStop Color="#3FFFFFFF" Offset="0"/>
							<GradientStop Color="#00FFFFFF" Offset="0.987"/>
						</LinearGradientBrush>
					</Ellipse.Fill>
				</Ellipse>
			</Grid>
		</Border>
	</Grid>
</UserControl>
